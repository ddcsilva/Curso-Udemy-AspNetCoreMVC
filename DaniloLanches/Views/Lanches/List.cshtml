@model LancheListViewModel

<div>
    <h2 class="mb-4 category-title">@Model.CategoriaAtual</h2>
</div>

<div class="container">
    <div class="row">
        @foreach (var lanche in Model.Lanches)
        {
            <div class="col-sm-12 col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow">
                    <img src="@lanche.ImagemUrl" class="card-img-top" alt="@lanche.Nome" aria-label="@lanche.Nome">
                    <div class="card-body">
                        <h4 class="card-title">@lanche.Nome</h4>
                        <h5 class="card-subtitle mb-2 text-muted">Pre√ßo: @lanche.Preco.ToString("C")</h5>
                        <p class="card-text">@lanche.DescricaoCurta</p>
                    </div>
                    <div class="card-footer">
                        <a href="#" class="btn btn-primary">Ver detalhes</a>
                        <a href="#" class="btn btn-secondary">Adicionar ao carrinho</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

